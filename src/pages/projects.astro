---
import ProjectCard from '../components/ProjectCard.astro'
import Layout from '../layouts/Layout.astro'
import { GrProjects, GrTechnology } from 'react-icons/gr'

const projects = [
  {
    title: 'Teesa',
    description:
      'Tienda virtual para compra de equipos y repuestos de la industria alimenticia. Encuentra aquí lo que tu cocina necesita',
    technologies: ['React', 'Node', 'Tailwind', 'Express', 'PostgreSQL', 'Sequelize'],
    technologyColorTag: 'bg-[#14b8a6]',
    image: '/public/teesa-project-color.webp',
    githubLink: 'https://github.com/Jhonny91360/Teesa_backend_SQL',
    deploy: 'https://www.youtube.com/watch?v=dADT42DSssU'
  },
  {
    title: 'Movies App',
    description: 'Aplicativo web con cientos de películas, series, video juegos y más.',
    technologies: ['Redux toolkit', 'Tailwind', 'React', 'Html', 'CSS'],
    technologyColorTag: 'bg-[#efb509]',
    image: '/public/movie-box-project-color.webp',
    githubLink: 'https://github.com/Jhonny91360/movie-app',
    deploy: 'https://movie-app-three-dusky.vercel.app/'
  },
  {
    title: 'Reminder App',
    description: 'Aplicativo móvil que te ayuda a recordar tareas en el día a día ',
    technologies: ['React Native', 'Typescript', 'SQLite', 'CSS'],
    technologyColorTag: 'bg-[#6b21a8]',
    image: '/public/reminder-app-project-color.webp',
    githubLink: 'https://github.com/Jhonny91360/Reminder-app'
  },
  {
    title: 'Food App',
    description: 'Encuentra recetas de todas partes del mundo o crea tu propia receta y compártela',
    technologies: ['Redux', 'React', 'Node', 'Express', 'PostgreSQL', 'Sequelize'],
    technologyColorTag: 'bg-[#cd7213]',
    image: '/public/food-app-project-color.webp',
    githubLink: 'https://github.com/Jhonny91360/PI_Foods_APP',
    deploy: 'https://pi-foods-acx0ue8el-jhonny91360.vercel.app'
  },
  {
    title: 'Porfolio',
    description: 'Mi porfolio donde doy a conocer mi perfil profesional como desarrollador web',
    technologies: ['Astro', 'React', 'Tailwind', 'Javascript', 'HTML'],
    technologyColorTag: 'bg-[#ef4444]',
    image: '/public/porfolio-project-color.webp',
    githubLink: 'https://github.com/Jhonny91360/Porfolio',
    deploy: '/'
  }
]
---

<Layout title='Jhonny'>
  <main class='p-2 md:p-4 fromBottom'>
    <header class='w-[400px] flex gap-8 items-center my-[30px] md:ml-8'>
      <GrProjects color='#fff' size={30} />
      <span class='text-white text-4xl'>Proyectos</span>
    </header>
    <section class='flex justify-between flex-wrap gap-8'>
      {
        projects.map((project, index) => {
          return (
            <ProjectCard
              title={project.title}
              description={project.description}
              image={project.image}
              technologies={project.technologies}
              githubLink={project.githubLink}
              deploy={project.deploy}
              technologyColorTag={project.technologyColorTag}
              className={
                index == 0 ? 'md:max-w-[50%]' : index == 1 ? 'md:max-w-[45%]' : 'md:max-w-[30%]'
              }
            />
          )
        })
      }
    </section>
  </main>
</Layout>
