---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import { TypeCard } from '../enums/cardEnums'
import { IoMdMail } from 'react-icons/io'
import About from '../components/About.astro'
import { GrProjects } from 'react-icons/gr'
import { SlSocialFacebook } from 'react-icons/sl'
import { SlSocialLinkedin } from 'react-icons/sl'
import { FaInstagram } from 'react-icons/fa6'
import { FaGithub } from 'react-icons/fa'
import { IoMdContacts } from 'react-icons/io'
import { IoDocumentText } from 'react-icons/io5'
import { FaClipboardList } from 'react-icons/fa6'
import { FaChildReaching } from 'react-icons/fa6'
import { IoCreateSharp } from 'react-icons/io5'
import Skills from '../components/Skills.astro'
---

<Layout title='Welcome to Astro.'>
  <main>
    <section class='flex flex-col items-center gap-4 p-4'>
      <About />
      <div class='flex gap-2 flex-col md:flex-row items-center justify-center md:justify-normal'>
        <Card type={TypeCard.BIG} name='Proyectos' className='text-white'>
          <GrProjects className='hidden md:block' slot='icon' color='#fff' size={250} />
          <GrProjects className='block md:hidden' slot='icon' color='#fff' size={100} />
        </Card>
        <div class='flex md:flex-col gap-2'>
          <Card type={TypeCard.TINY} name='Contacto' className='text-white'>
            <IoMdContacts className='hidden md:block' slot='icon' color='#fff' size={100} />
            <IoMdContacts className='block md:hidden' slot='icon' color='#fff' size={50} />
          </Card>
          <Card type={TypeCard.TINY} name='Descargar C.V' className='text-white hidden md:flex'>
            <IoDocumentText slot='icon' color='#fff' size={100} />
          </Card>
          <Card type={TypeCard.TINY} name='⬇︎ C.V' className='text-white block md:hidden'>
            <IoDocumentText slot='icon' color='#fff' size={50} />
          </Card>
        </div>
        <!-- desktop social networks -->
        <Card
          type={TypeCard.BIG}
          name='Redes sociales'
          className='text-white bg-orange-600 hover:bg-orange-400 hidden md:flex'
        >
          <div class='flex flex-col gap-6' slot='icon'>
            <div class='flex gap-6'>
              <FaGithub slot='icon' color='#fff' size={100} />
              <SlSocialLinkedin slot='icon' color='#fff' size={100} />
            </div>
            <div class='flex gap-6'>
              <SlSocialFacebook slot='icon' color='#fff' size={100} />
              <FaInstagram slot='icon' color='#fff' size={100} />
            </div>
          </div>
        </Card>
        <!-- mobile social networks -->
        <Card
          type={TypeCard.BIG}
          name='Redes sociales'
          className='text-white bg-orange-600 hover:bg-orange-400 block md:hidden'
        >
          <div class='flex flex-col gap-6' slot='icon'>
            <div class='flex gap-6'>
              <FaGithub slot='icon' color='#fff' size={50} />
              <SlSocialLinkedin slot='icon' color='#fff' size={50} />
            </div>
            <div class='flex gap-6'>
              <SlSocialFacebook slot='icon' color='#fff' size={50} />
              <FaInstagram slot='icon' color='#fff' size={50} />
            </div>
          </div>
        </Card>
      </div>
      <div class='flex flex-col md:flex-row gap-2 items-center'>
        <Skills className='md:w-[608px] h-[600px]' />
        <div class='flex flex-col gap-2'>
          <Card
            type={TypeCard.TINY}
            name='Experiencia'
            className='text-white w-full max-w-[320px] md:max-w-none md:w-[400px] bg-purple-500 hover:bg-purple-300'
          >
            <FaClipboardList className='hidden md:block' slot='icon' color='#fff' size={100} />
            <FaClipboardList className='block md:hidden' slot='icon' color='#fff' size={50} />
          </Card>
          <div class='flex gap-2'>
            <Card type={TypeCard.TINY} name='Formación' className='text-white md:w-[196px]'>
              <FaChildReaching className='hidden md:block' slot='icon' color='#fff' size={100} />
              <FaChildReaching className='block md:hidden' slot='icon' color='#fff' size={50} />
            </Card>
            <Card type={TypeCard.TINY} name='Servicios' className='text-white md:w-[196px]'>
              <IoCreateSharp className='hidden md:block' slot='icon' color='#fff' size={100} />
              <FaChildReaching className='block md:hidden' slot='icon' color='#fff' size={50} />
            </Card>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>
