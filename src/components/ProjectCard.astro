---
interface Props {
  title: string
  description: string
  technologies: string[]
  image: string
  githubLink: string
}
const { title, description, githubLink, image, technologies } = Astro.props
---

<section class='flex flex-col gap-6 border border-1 border-slate-600 p-4 rounded-lg'>
  <header>
    <p class='text-3xl font-semibold text-yellow-400'>
      {title}
    </p>
  </header>
  <p class='text-2xl font-semibold text-white'>
    {description}
  </p>
  <div class='flex gap-2 flex-wrap text-white'>
    {
      technologies.map(technology => {
        return <span class='bg-blue-600 px-4 py-2 rounded-md'>{technology} </span>
      })
    }
  </div>
  <img src={image} alt='' srcset='' class='rounded shadow-2xl shadow-white/10' />
  <a class='font-semibold text-white' href={githubLink}>{githubLink}</a>
</section>
