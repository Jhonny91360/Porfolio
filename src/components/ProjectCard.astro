---
import { TiArrowForward } from 'react-icons/ti'
import { SiQuicklook } from 'react-icons/si'
interface Props {
  title: string
  description: string
  technologies: string[]
  image: string
  githubLink: string
  deploy?: string
}
const { title, description, githubLink, image, technologies, deploy } = Astro.props
console.log('Propiedades recibidas*----♠', Astro.props)
---

<section
  class='flex flex-col gap-6 bg-black/100 border-b-2 border-t-2 border-slate-600 p-4 rounded-lg'
>
  <header>
    <p class='text-3xl font-bold text-white'>
      {title}
    </p>
  </header>
  <p class='text-2xl text-white'>
    {description}
  </p>
  <div class='flex gap-2 flex-wrap text-white'>
    {
      technologies.map(technology => {
        return (
          <span class='bg-indigo-100 text-indigo-800 text-base font-medium me-2 px-2.5 py-0.5 rounded dark:bg-indigo-900 dark:text-indigo-300'>
            {technology}{' '}
          </span>
        )
      })
    }
  </div>
  <img src={image} alt='' srcset='' class='rounded shadow-2xl shadow-white/10' />
  <div class='flex flex-col md:flex-row gap-8 items-center'>
    {
      deploy && (
        <a
          class='font-semibold text-white flex gap-2 items-center rounded-xl px-4 py-1 hover:bg-gray-300 hover:text-black'
          target='_blank'
          href={deploy}
        >
          <span class='underline whitespace-nowrap'>Visita la página</span>
          <SiQuicklook />
        </a>
      )
    }
    <a
      class='font-semibold text-white flex gap-2 items-center rounded-xl px-4 py-1 hover:bg-gray-300 hover:text-black'
      target='_blank'
      href={githubLink}
    >
      <span class='underline hitespace-nowrap'>Mira el código aquí</span>
      <TiArrowForward />
    </a>
  </div>
</section>
